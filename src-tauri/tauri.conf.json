{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "自动化验证工具",
  "version": "0.1.0",
  "identifier": "default",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "自动化验证工具",
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/Shapr3D_TestFlight.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "../Entitlements.plist"
    }
  }
}
