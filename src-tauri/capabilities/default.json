{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "dialog:default",
    "dialog:allow-save",
    "fs:default",
    "fs:allow-write-file",
    "fs:allow-write",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$DOWNLOAD"
        },
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$DOCUMENT"
        },
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$DESKTOP"
        },
        {
          "path": "$DESKTOP/**"
        }
      ]
    },
    "fs:default"
  ]
}